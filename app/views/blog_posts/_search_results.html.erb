<% if blog_posts.any? %>
  <% blog_posts.each do |blog_post| %>
    <div class="blog-post">
      <h2><%= link_to blog_post.title, blog_post %></h2>
      <p><%= truncate(blog_post.body, length: 100) %></p>
      <!-- Display comments related to the blog post -->
      <% blog_post.comments.each do |comment| %>
        <div class="comment">
          <p><%= truncate(comment.body, length: 100) %></p>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>No results found</p>
<% end %>
